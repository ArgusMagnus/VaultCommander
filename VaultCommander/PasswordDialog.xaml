<Window x:Class="VaultCommander.PasswordDialog" x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VaultCommander"
        mc:Ignorable="d"
        Title="Bitwarden Extender" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Server" x:Name="_serverLabel"/>
        <TextBox x:Name="_serverBox"/>
        <TextBlock Text="Emailadresse"/>
        <TextBox x:Name="_emailBox"/>
        <TextBlock Margin="0,10,0,0" x:Name="_passwordLabel" Text="Passwort"/>
        <PasswordBox x:Name="_passwordBox" />
        <Button Margin="0,10,0,0" Content="OK" IsDefault="True" Click="OnButtonOK"/>
    </StackPanel>
</Window>
